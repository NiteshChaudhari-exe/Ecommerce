# Example environment variables for backend
PORT=5000
MONGO_URI=mongodb://localhost:27017/ecommerce
JWT_SECRET=your_jwt_secret_here


# ============================================================================
# Payment Providers Configuration
# ============================================================================

# Default payment provider: khalti or esewa
PAYMENT_PROVIDER_DEFAULT=esewa

# ---------- eSewa Configuration (Nepal) ----------
# eSewa merchant code and URLs for payment processing
ESEWA_MERCHANT_CODE=EPAYTEST
ESEWA_PAYMENT_URL=https://esewa.com.np/epay/main
ESEWA_VERIFY_URL=https://esewa.com.np/epay/verify
# eSewa redirects user to this callback URL after payment
ESEWA_CALLBACK_URL=http://localhost:5000/api/payment/esewa/callback

# ---------- Khalti Configuration (Nepal) ----------
# Get keys from Khalti dashboard (https://dashboard.khalti.com)
KHALTI_PUBLIC_KEY=test_public_key_placeholder
KHALTI_SECRET_KEY=test_secret_key_placeholder
# Register this webhook URL in Khalti Dashboard if using webhooks
KHALTI_WEBHOOK_URL=http://localhost:5000/api/payment/webhook?provider=khalti

# ---------- Frontend Base URL ----------
# Used for post-payment redirects (eSewa callback redirects here)
FRONTEND_BASE_URL=http://localhost:3000

